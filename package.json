{
  "name": "lotus-o2o-system",
  "version": "1.0.0",
  "description": "LOTUS O2O System with Phoenix OMS and Phoenix Commerce Engine",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm:dev:oms\" \"npm:dev:commerce\"",
    "dev:oms": "ts-node-dev --respawn --transpile-only --project phoenix-oms/tsconfig.json phoenix-oms/src/index.ts",
    "dev:commerce": "ts-node-dev --respawn --transpile-only --project phoenix-commerce/tsconfig.json phoenix-commerce/src/index.ts",
    "build": "npm run build:oms && npm run build:commerce",
    "build:oms": "tsc -p phoenix-oms/tsconfig.json",
    "build:commerce": "tsc -p phoenix-commerce/tsconfig.json",
    "start:oms": "node phoenix-oms/dist/index.js",
    "start:commerce": "node phoenix-commerce/dist/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": ["oms", "commerce", "monitoring", "lotus"],
  "author": "LOTUS Team",
  "license": "MIT"
}
